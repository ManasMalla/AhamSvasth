<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/heightImageView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/height_boy" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/heighttextInputLayout"
        style="@style/TextInputLayoutStyleGreen"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        app:boxBackgroundColor="#FFF"
        app:boxCornerRadiusBottomEnd="0dp"
        app:boxCornerRadiusBottomStart="30dp"
        app:boxCornerRadiusTopEnd="0dp"
        app:boxCornerRadiusTopStart="30dp"
        app:boxStrokeColor="#19da97"
        app:boxStrokeWidth="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/textInputLayout2"
        app:layout_constraintStart_toStartOf="@+id/heightImageView"
        app:layout_constraintTop_toTopOf="@+id/textInputLayout2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/heightEditText"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/gilroy_bold"
            android:inputType="number"
            android:paddingStart="32dp"
            android:paddingLeft="32dp"
            android:textSize="24sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="#FFF"
        app:boxCornerRadiusBottomEnd="30dp"
        app:boxCornerRadiusBottomStart="0dp"
        app:boxCornerRadiusTopEnd="30dp"
        app:boxCornerRadiusTopStart="0dp"
        app:boxStrokeColor="#000"
        app:boxStrokeWidth="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/heightImageView"
        app:layout_constraintStart_toEndOf="@+id/heighttextInputLayout"
        app:layout_constraintTop_toTopOf="@+id/heightImageView">

        <AutoCompleteTextView
            android:id="@+id/heightUnitsTextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/gilroy_bold"
            android:gravity="center_vertical"
            android:inputType="none"
            android:hint="unit"/>
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>